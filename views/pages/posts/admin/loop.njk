<ul class="{{post._id}} noselect" onclick="$(this).next().toggleClass('active')">
	<li class="title">{{post.title}}</li>
	<li class="slug">{{post.slug}}</li>
	<li class="date">{{crp.util.dateToStr(post.date, user.timezone)}}</li>
</ul>

<form class="post-settings-form">
	<label for="post_title">Title: </label>
	<input type="text" name="post_title" class="post_title" value="{{post.title}}" />

	<br />

	<label for="post_type">Type: </label>
	<select name="post_type" class="post_type">
		<option value="page" {% if post.type == 'page' %}selected{% endif %}>Page</option>
		<option value="news" {% if post.type == 'news' %}selected{% endif %}>News</option>
		<option value="featured_content" {% if post.type == 'featured_content' %}selected{% endif %}>Featured Content</option>
	</select>

	<br />

	<label for="post_slug">Slug: </label>
	<input type="text" name="post_slug" class="post_slug" value="{{post.slug}}" />

	<br />

	<label for="post_img">Featured Image: </label>
	<input type="text" name="post_img" class="post_img" value="{{post.img}}" />

	<br />

	<textarea name="post_content" class="post_content tinymce">{{post.content}}</textarea>

	<br />

	<input type="hidden" name="postid" class="postid" value="{{post._id}}" />

	<div class="actions">
		<a onclick="postsRemove('{{post._id}}')">delete</a>
	</div>

	<div class="submit">
		<span class="post-saved">Saved!</span>
		<input type="submit" value="Save" />
	</div>
</form>
