{% query 'games', {}, {sort: [[['name', 1]]]}, 'games' %}

<nav class="nav nav-tabs justify-content-center mt-3">
	<a href="/chapters" class="nav-item nav-link">All Chapters</a>
	<a href="/chapters/create" class="nav-item nav-link active">Create Chapter</a>
</nav>

<nav class="nav nav-tabs d-block d-lg-flex justify-content-center text-center bg-white">
	<a href="#form-group" class="nav-item nav-link border-top-0 border-bottom rounded-0 pointer active" id="group-tab" data-toggle="tab" role="tab" aria-controls="group" aria-selected="true">Chapter Group</a>
	<a href="#form-url" class="nav-item nav-link border-top-0 border-bottom rounded-0 pointer" id="url-tab" data-toggle="tab" role="tab" aria-controls="url" aria-selected="false">Outside URL</a>
</nav>

<div class="container tab-content mt-3">
	<div class="row tab-pane fade show active" id="form-group" role="tabpanel" aria-labelledby="group-tab">
		<form class="col new-chapter-form bg-white rounded shadow-sm mt-3 p-3" id="new-group-form">
			<h6 class="font-italic text-center">Your Chapter will be set up as a group on the main Chronicles site allowing you to add members and create private members only forums.</h6>
			<hr />

			<div class="form-group">
				<label for="new-group-form-game">Game</label>
				<select class="form-control new-chapter-form-game" id="new-group-form-game" name="game">
					{% for game in games %}
						<option value="{{game._id}}">{{game.name}}</option>
					{% endfor %}
				</select>
				<div class="invalid-feedback"></div>
			</div>

			<div class="form-row">
				<div class="form-group col-lg-6">
					<label for="new-group-form-name">Chapter Name</label>
					<input type="text" class="form-control new-chapter-form-name" id="new-group-form-name" name="name" placeholder="Name" maxlength="80" />
					<div class="invalid-feedback"></div>
				</div>

				<div class="form-group col-lg-6">
					<label for="new-group-form-tagline">Tagline</label>
					<input type="text" class="form-control new-chapter-form-tagline" id="new-group-form-tagline" name="tagline" placeholder="Tagline" maxlength="140" />
					<div class="invalid-feedback"></div>
				</div>
			</div>

			<div class="form-group">
				<label for="new-group-form-discord">Discord ID</label>
				<input type="text" class="form-control new-chapter-form-discord" id="new-group-form-discord" name="discord" placeholder="123456789012345678" maxlength="18" />
				<div class="invalid-feedback"></div>
			</div>

			<div class="form-group">
				<div class="g-recaptcha" data-sitekey="6Lf0MT8UAAAAAJ48jzvBm-QGZpB0Fer8WsGpguMS"></div>
				<script src="https://www.google.com/recaptcha/api.js" async defer></script>
				<input type="hidden" class="form-control new-chapter-form-captcha" id="new-group-form-captcha" />
				<div class="invalid-feedback"></div>
			</div>

			<input type="hidden" name="type" value="group" />
			<button type="submit" class="btn btn-primary d-block ml-auto">Create Chapter</button>
		</form>
	</div>

	<div class="row tab-pane fade" id="form-url" role="tabpanel" aria-labelledby="url-tab">
		<form class="col new-chapter-form bg-white rounded shadow-sm mt-3 p-3" id="new-url-form">
			<h6 class="font-italic text-center">Already have a website? Choosing this option will make all references to your Chapter point to the URL you provide here.</h6>
			<hr />

			<div class="form-group">
				<label for="new-url-form-game">Game</label>
				<select class="form-control new-chapter-form-game" id="new-url-form-game" name="game">
					{% for game in games %}
						<option value="{{game._id}}">{{game.name}}</option>
					{% endfor %}
				</select>
				<div class="invalid-feedback"></div>
			</div>

			<div class="form-row">
				<div class="form-group col-lg-6">
					<label for="new-url-form-name">Chapter Name</label>
					<input type="text" class="form-control new-chapter-form-name" id="new-url-form-name" name="name" placeholder="Name" maxlength="80" />
					<div class="invalid-feedback"></div>
				</div>

				<div class="form-group col-lg-6">
					<label for="new-url-form-slug">URL</label>
					<input type="text" class="form-control new-chapter-form-slug" id="new-url-form-slug" name="slug" placeholder="https://example.com" />
					<div class="invalid-feedback"></div>
				</div>
			</div>

			<div class="form-group">
				<div class="g-recaptcha" data-sitekey="6Lf0MT8UAAAAAJ48jzvBm-QGZpB0Fer8WsGpguMS"></div>
				<script src="https://www.google.com/recaptcha/api.js" async defer></script>
				<input type="hidden" class="form-control new-chapter-form-captcha" id="new-url-form-captcha" />
				<div class="invalid-feedback"></div>
			</div>

			<input type="hidden" name="type" value="url" />
			<button type="submit" class="btn btn-primary d-block ml-auto">Create Chapter</button>
		</form>
	</div>
</div>

{% include "./script.njk" %}
