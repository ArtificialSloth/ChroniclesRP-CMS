{% include "./style.njk" %}
{% lookup 'chapters', {_id: chapterid}, 'chapter' %}

<div class="profile-header d-flex flex-column-reverse" style="background-image:url('{{chapter.getCoverPic()}}')">
	<div class="text-white text-center h-50" style="background-color:rgba(0, 0, 0, 0.5)">
		<img src="{{chapter.getProfilePic()}}" alt="{{chapter.name}}" width="150" height="150" />
		<div class="py-2 px-3">
			<h2 class="font-weight-bold">{{chapter.name}}</h2>
			<p>{{chapter.tagline}}</p>
			{% if chapter.getMember(user._id).role > 0 %}
				<p><button class="btn btn-sm btn-primary" onclick="leaveChapter('{{chapter._id}}')">Leave Chapter</button></p>
			{% elseif chapter.open %}
				<p><button class="btn btn-sm btn-primary" onclick="joinChapter('{{chapter._id}}')">Join Chapter</button></p>
			{% endif %}
		</div>
	</div>
</div>

<div class="profile-content">
	{% include "pages" + subPage %}
</div>

{% include "./script.njk" %}
