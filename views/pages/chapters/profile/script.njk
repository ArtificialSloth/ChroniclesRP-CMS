<script>
	function joinChapter(chapterid) {
		crpAjax('/api/join-chapter', {chapterid: chapterid}, (res) => {
			if (res === true) {
				crpGetPage(window.location.pathname);
			} else {
				console.error(res);
			}
		});
	}

	function leaveChapter(chapterid) {
		crpAjax('/api/leave-chapter', {chapterid: chapterid}, (res) => {
			if (res === true) {
				crpGetPage(window.location.pathname);
			} else {
				console.error(res);
			}
		});
	}
</script>
