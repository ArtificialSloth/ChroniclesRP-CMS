<div class="chapter">
	{% include "./style.njk" %}
	{% lookup 'users', {_id: userid}, 'user' %}
	{% lookup 'chapters', {_id: chapterid}, 'chapter' %}

	<div class="header" style="background-image:url('{{crp.chapters.getCoverPic(chapter)}}')">
		<div class="meta">
			<img src="{{crp.chapters.getProfilePic(chapter)}}" />
			<h1>{{chapter.name}}</h1>
			<p>{{chapter.tagline}}</p>
			{% if crp.chapters.getMember(chapter, user._id).role > 0 %}
				<p><a onclick="leaveChapter('{{chapter._id}}')">Leave Chapter</a></p>
			{% elseif chapter.open %}
				<p><a onclick="joinChapter('{{chapter._id}}')">Join Chapter</a></p>
			{% endif %}
		</div>
	</div>

	<ul class="nav noselect">
		{% if chapter.type == 'group' %}
			<li onclick="crpGetSubPage('/chapters/{{chapter.nicename}}', '.chapter .content', true)">Home</li>
			<li onclick="crpGetSubPage('/chapters/{{chapter.nicename}}/forums', '.chapter .content', true)">Forums</li>
		{% endif %}

		<li onclick="crpGetSubPage('/chapters/{{chapter.nicename}}/members', '.chapter .content', true)">Members</li>

		{% if crp.chapters.getMember(chapter, user._id).role >= 2 or  user.role >= 3 %}
			<li onclick="crpGetSubPage('/chapters/{{chapter.nicename}}/edit', '.chapter .content', true)">Manage</li>
		{% endif %}
	</ul>

	<div class="content">
		{% include "pages" + subPage %}
	</div>

	{% include "./script.njk" %}
</div>
