{% lookup 'users', {_id: profileid}, 'profile' %}
{% query 'chapters', {}, {sort: [['name', 1]]}, 'chapters' %}

<div class="container">
	<nav class="nav nav-tabs justify-content-center mt-3 d-lg-none">
		<a class="nav-link" href="/members/{{profile.nicename}}">Activity</a>
		<a class="nav-link active" href="/members/{{profile.nicename}}/chapters">Chapters</a>
		<a class="nav-link" href="/members/{{profile.nicename}}/messages">Messages</a>
		<a class="nav-link" href="/members/{{profile.nicename}}/account">Account</a>
	</nav>

	<div class="row mt-lg-3">
		<div class="col-lg-9">
			{% set inChapter = false %}
			{% for chapter in chapters %}
					{% if crp.chapters.getMember(chapter, profile._id).role > 0 %}
						{% set inChapter = true %}
						{% lookup 'games', {_id: chapter.game}, 'game' %}

						<div class="d-flex flex-wrap bg-white rounded shadow-sm mb-3 p-3">
							<img src="{{crp.chapters.getProfilePic(chapter)}}" width="75" height="75" alt="{{chapter.name}}" />
							<div class="ml-lg-3">
								{{crp.chapters.getLink(chapter) | safe}}
								<p class="text-muted">{{chapter.tagline}}</p>
							</div>
							<span class="ml-lg-auto w-100 w-auto"><a href="/chapters/{{game.slug}}">{{game.name}}</a></span>
						</div>
					{% endif %}
			{% endfor %}

			{% if not inChapter %}
				<div class="alert alert-warning" role="alert">You're not a member of any Chapters.</div>
			{% endif %}
		</div>

		<div class="col-lg-3">
			<nav class="nav nav-tabs nav-vertical-tabs flex-column justify-content-center mt-2 d-none d-lg-block">
				<a class="nav-link" href="/members/{{profile.nicename}}">Activity</a>
				<a class="nav-link active" href="/members/{{profile.nicename}}/chapters">Chapters</a>
				<a class="nav-link" href="/members/{{profile.nicename}}/messages">Messages</a>
				<a class="nav-link" href="/members/{{profile.nicename}}/account">Account</a>
			</nav>
		</div>
	</div>
</div>
