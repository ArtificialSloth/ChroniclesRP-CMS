<div class="page">
	<ul class="topic">
		{% include "./style.njk" %}

		{% lookup 'topics', {_id: topicid}, 'topic' %}
		{% lookup 'forums', {_id: topic.parent}, 'forum' %}
		{% lookup 'categories', {_id: forum.category}, 'category' %}
		{% lookup 'chapters', {_id: category.chapter}, 'chapter' %}
		{% lookup 'users', {_id: topic.author}, 'author' %}
		{% lookup 'users', {_id: userid}, 'user' %}

		<p class="breadcrumbs">
			<a onclick="crpGetPage('/')">Home</a>
			<span>›</span>
			<a onclick="crpGetPage('/forums')">Index</a>
			<span>›</span>
			<a onclick="crpGetPage('/forums/{{forum.slug}}')">{{forum.name}}</a>
			<span>›</span>
			<span>{{topic.title}}</span>
		</p>

		{% set member = crp.util.getChapterMember(chapter, user._id) %}
		{% if (not chapter or (member and member.role >= 1)) and not category.role or category.role == user.role or user.role >= 3 %}
			<li class="header">
				<ul>
					<li>Author</li>
					<li>{{topic.title}}</li>
				</ul>
			</li>

			<li class="sub-header">
				<ul>
					<li>{{crp.util.dateToStr(topic.date, user.timezone)}}</li>
					<li>{% if author._id.equals(user._id) or user.role >= 3 %}<a onclick="editToggle(this)">Edit</a> | <a onclick="removeTopic('{{topic._id}}')">Delete</a> | {% endif %}<a onclick="crpScrollTo('.reply')">Reply</a></li>
				</ul>
			</li>

			<li class="body">
				<ul>
					<li>
						<img src="{{crp.util.getUserProfilePic(author)}}" width="80" height="80" />
						<a onclick="crpGetPage('/members/{{author.nicename}}')">{{author.display_name}}</a>
						<div class="role">{{crp.util.parseRole(author.role)}}</div>
					</li>
					<li>{{topic.content | safe}}</li>
					<li>
						{% if author._id.equals(user._id) or user.role >= 3 %}
							<script>crpTinyMCE()</script>
							<form class="edit-topic">
								<input type="text" name="title" value="{{topic.title}}" />
								<textarea class="tinymce" name="body">{{topic.content}}</textarea>

								<input type="hidden" name="topicid" value="{{topic._id}}" />
								<input type="submit" value="Save" />
								<span class="input-error"></span>
							</form>
						{% endif %}
					</li>
				</ul>
			</li>

			{% query 'replies', {parent: topic._id}, {sort: [['date', 1]]}, 'replies' %}
			{% for reply in replies %}
				{% lookup 'users', {_id: reply.author}, 'author' %}

				<li class="sub-header reply">
					<ul>
						<li>{{crp.util.dateToStr(reply.date, user.timezone)}}</li>
						<li>{% if author._id.equals(user._id) or user.role >= 3 %}<a onclick="editToggle(this)">Edit</a> | <a onclick="removeReply('{{reply._id}}')">Delete</a> | {% endif %}<a onclick="crpScrollTo('.reply')">Reply</a></li>
					</ul>
				</li>
				<li class="reply body">
					<ul>
						<li>

							<img src="{{crp.util.getUserProfilePic(author)}}" width="80" height="80" />
							<a onclick="crpGetPage('/members/{{author.nicename}}')">{{author.display_name}}</a>
							<div class="role">{{crp.util.parseRole(author.role)}}</div>
						</li>
						<li>{{reply.content | safe}}</li>
						<li>
							{% if author._id.equals(user._id) or user.role >= 3 %}
								<script>crpTinyMCE()</script>
								<form class="edit-reply">
									<textarea class="tinymce" name="body">{{reply.content}}</textarea>

									<input type="hidden" name="replyid" value="{{reply._id}}" />
									<input type="submit" value="Save" />
									<span class="input-error"></span>
								</form>
							{% endif %}
						</li>
					</ul>
				</li>
			{% endfor %}

			{% if user and user.role > 0 %}
				<script>crpTinyMCE()</script>
				<fieldset class="new-post">
					<legend>Reply to: {{topic.title}}</legend>
					<form>
						<textarea name="reply" class="tinymce"></textarea>

						<input type="hidden" name="parent" value="{{topic._id}}" />
						<input type="submit" value="Post" />
						<span class="input-error"></span>
					</form>
				</fieldset>
			{% endif %}

			{% include "./script.njk" %}
		{% else %}
			<div class="warning">You're not allowed to view this topic.</div>
		{% endif %}
	</ul>

	{% include "components/sidebar/index.njk" %}
</div>
