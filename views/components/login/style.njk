<style>
	#login {
		height:100vh;
		opacity:0;
		position:fixed;
		-webkit-transition:all 0.2s ease-in-out;
		transition:all 0.2s ease-in-out;
		width:100vw;
		visibility:hidden;
		z-index:4;
	}

	#login.active {
		opacity:1;
		visibility:initial;
	}

	#login .login-background {
		background-color:rgba(0, 0, 0, 0.75);
		height:100vh;
		position:absolute;
		width:100vw;
	}

	.login-form {
		background-color:{{css.colors.bg}};
		font-family:Droid Serif, Georgia, serif;
		left:50%;
		padding:0.625em; /* 10/16 */
		position:absolute;
		top:50%;
		-webkit-transform:translate(-50%, -50%);
		transform:translate(-50%, -50%);
		width:20.625em; /* 330/16 */
	}

	.login-form h1 {
		font-family:Montserrat, Helvetica Neue, Helvetica, sans-serif;
		font-size:1.5em; /* 24/16 */
		font-weight:bold;
		margin-bottom:1.875em; /* 30/16 */
		text-align:center;
	}

	.login-form label {
		color:#999;
		font-size:1.125em; /* 18/16 */
	}

	.login-form input[type=text],
	.login-form input[type=password] {
		display:block;
		margin-top:0.5em; /* 8/16 */
		margin-bottom:1.25em; /* 20/16 */
		width:19.375em; /* 310/16 */
	}

	.login-form input.input-error {
		border:0.0625em solid #ff0000; /* 1/16 */
	}

	.login-form input[type=checkbox] + input[type=button] {
		background-color:transparent;
		border:none;
		color:{{css.colors.link}};
		padding:0;
	}

	.login-form .error-message {
		background-color: #9D3834;
		border:0.0625em dashed #fff; /* 1/16 */
		display:none;
		margin-bottom:1.25em; /* 20/16 */
		padding:0.625em; /* 10/16 */
		text-align:center;
	}

	.login-form.error .error-message {
		display:block;
		position:relative;
	}

	.login-form input[type=submit] {
		float:right;
	}

	.wiggle {
		-webkit-animation-name:wiggle;
		animation-name:wiggle;
		-webkit-animation-duration:250ms;
		animation-duration:250ms;
		-webkit-animation-iteration-count:2;
		animation-iteration-count:2;
		-webkit-animation-timing-function: ease-in-out;
		animation-timing-function: ease-in-out;
	}

	@-webkit-keyframes wiggle {
		0% {left: 0;}
		25% {left: -0.3125em; }/* 5/16 */
		75% {left: 0.3125em}/* 5/16 */
		100% {left: 0}
	}

	@keyframes wiggle {
		0% {left: 0;}
		25% {left: -0.3125em; }/* 5/16 */
		75% {left: 0.3125em}/* 5/16 */
		100% {left: 0}
	}
</style>
