<div class="profile">
	<link rel="stylesheet" href="/css/members/profile.css">

	<div class="profile-header">
		<div class="header-cover-image" style="background-image:url('{{user.meta.cover_pic}}')"></div>
		<div class="header-meta">
			<img class="profile-pic" src="{{user.meta.profile_pic}}" />
			<div class="profile-details">
				<a class="profile-name" onclick="crpGetPage('/members/{{user.nicename}}')">{{user.display_name}}</a>
				<span class="profile-tagline">{{user.meta.tagline}}</span>
			</div>
		</div>
	</div>

	<div class="profile-content">
		<div class="top-bar"></div>
		
		<div class="containor">
			{{html subPage}}
		</div>
		
		<div class="nav">
			<a onclick="crpGetSubPage('/members/{{user.nicename}}', '.profile-content .containor', true)">Activity</a>
			<a onclick="crpGetSubPage('/members/{{user.nicename}}/info', '.profile-content .containor', true)">Info</a>
			<a onclick="crpGetSubPage('/members/{{user.nicename}}/friends', '.profile-content .containor', true)">Friends</a>
			<a onclick="crpGetSubPage('/members/{{user.nicename}}/groups', '.profile-content .containor', true)">Groups</a>
			{{#ifIsUser user req}}
				<a onclick="crpGetSubPage('/members/{{user.nicename}}/messages', '.profile-content .containor', true)">Messages</a>
				<a onclick="crpGetSubPage('/members/{{user.nicename}}/account', '.profile-content .containor', true)">Account</a>
				<a onclick="crpGetSubPage('/members/{{user.nicename}}/settings', '.profile-content .containor', true)">Settings</a>
			{{/ifIsUser}}
		</div>
	</div>
</div>

{{#if user.new_email}}
<div class="activate">
	<span>Validate you new email using the code we sent to {{user.new_email}}.</span>
	
	<div>
		<input type="text" name="activation_code" class="activation_code" maxlength="6" placeholder="ACTIVATION CODE" />
		<button onclick="crpActivateUser($('.activation_code').val())">Activate</button>
	</div>
</div>
{{/if}}