server {
	listen 80 default_server;
	listen [::]:80 default_server;

	server_name ~^(www\.)?(?<sname>.+?).chroniclesrp.com$;
	root /var/www/$sname;

	index index.php index.html index.htm;

	location / {
		try_files $uri $uri/ =404;
	}

	location ~ \.php$ {
		include snippets/fastcgi-php.conf;
		fastcgi_pass unix:/run/php/$sname.sock;
	}

	location ~ /\.ht {
		deny all;
	}
}
